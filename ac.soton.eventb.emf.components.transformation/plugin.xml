<plugin>
<extension
     point="org.eclipse.ui.menus">
  <menuContribution
        locationURI="toolbar:ac.soton.eventb.emf.components.diagram.toolbar">
     <command
           commandId="ac.soton.eventb.emf.components.transformation.translateToEventB"
           icon="icons/UtoB.png"
           style="push">
     </command>
  </menuContribution>
</extension>
<extension
     point="org.eclipse.ui.commands">
  <command
        description="%command.description.translate"
        id="ac.soton.eventb.emf.components.transformation.translateToEventB"
        name="%command.name.translate">
  </command>
</extension>
<extension
     point="org.eclipse.ui.handlers">
  <handler
        class="ac.soton.eventb.emf.components.transformation.TranslateAction"
        commandId="ac.soton.eventb.emf.components.transformation.translateToEventB">
     <enabledWhen>
        <and>
           <with
                 variable="activePartId">
              <equals
                    value="ac.soton.eventb.emf.components.diagram.part.ComponentsDiagramEditorID">
              </equals>
           </with>
        </and>
     </enabledWhen>
  </handler>
</extension>

<!-- delete generated by Components, a contribution to Navigator menu -->

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:fr.systerel.explorer.navigator.view">
         <menu
               label="Delete Generated By...">
            <command
                  commandId="ac.soton.eventb.emf.components.transformation.commands.deleteGeneratedByComponents">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <with
                           variable="activePartId">
                        <equals
                              value="fr.systerel.explorer.navigator.view">
                        </equals>
                     </with>
                     <with
                           variable="selection">
                        <iterate
                              ifEmpty="false">
                           <instanceof
                                 value="org.eventb.core.IMachineRoot">
                           </instanceof>
                        </iterate>
                     </with>
                  </and>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ac.soton.eventb.emf.components.transformation.commands.DeleteGeneratedByComponentsCommand"
            commandId="ac.soton.eventb.emf.components.transformation.commands.deleteGeneratedByComponents">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="ac.soton.eventb.emf.components.transformation.commands.deleteGeneratedByComponents"
            name="Components">
      </command>
   </extension>
</plugin>
   
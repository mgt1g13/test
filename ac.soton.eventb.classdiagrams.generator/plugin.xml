<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ac.soton.eventb.emf.diagrams.generator.actions.GenerateAction"
            commandId="ac.soton.eventb.emf.diagrams.generator.generateEventB">
         <enabledWhen>
            <and>
               <with
                     variable="activePartId">
                  <equals
                        value="ac.soton.eventb.classdiagrams.diagram.part.ClassdiagramsDiagramEditorID">
                  </equals>
               </with>
            </and>
         </enabledWhen>
      </handler>
      <handler
            class="ac.soton.eventb.emf.diagrams.generator.actions.ValidateAction"
            commandId="ac.soton.eventb.emf.diagrams.generator.validate">
         <enabledWhen>
            <and>
               <with
                     variable="activePartId">
                  <equals
                        value="ac.soton.eventb.classdiagrams.diagram.part.ClassdiagramsDiagramEditorID">
                  </equals>
               </with>
            </and>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         id="ac.soton.eventb.emf.diagrams.generator"
         point="ac.soton.eventb.emf.diagrams.generator.rule">
      <generator
            generatorID="ac.soton.eventb.classdiagrams.generator"
            name="Classdiagram Generator"
            root_source_class="Classdiagram"
            sourcePackage="http://soton.ac.uk/models/eventb/classdiagrams">
         <rule
               name="ClassRule"
               rule_class="ac.soton.eventb.classdiagrams.generator.rules.ClassRule"
               source_class="Class">
         </rule>
      </generator>
   </extension>
   <extension
         point="ac.soton.eventb.emf.diagrams.validator">
      <validator
            editorClass="ac.soton.eventb.classdiagrams.diagram.part.ClassdiagramsDiagramEditor"
            name="Classdiagram diagram validator"
            validatorClass="ac.soton.eventb.classdiagrams.generator.validator.Validator">
      </validator>
   </extension>

</plugin>
